opam-version: "1.2"
name: "npm-path"
version: "1.0.1"
maintainer: "timoxley <secoif@gmail.com>"
author: "timoxley <secoif@gmail.com>"
license: "MIT"
dev-repo: "https://github.com/timoxley/npm-path.git"
depends: [
"which" {>="1.0.5" & <"2.0.0"}

]
install: ["sh" "-c" "ln -s %{PKG:lib}%/bin/npm-path %{bin}%/npm-path"]

remove: [
  [ "sh" "-c" "rm %{bin}%/npm-path" ] 
]

