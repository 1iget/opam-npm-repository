"source-map" {>="0.5.1" & <"0.6.0"}

"uglify-to-browserify" {>="1.0.0" & <"1.1.0"}

"yargs" {>="3.5.4" & <"3.6.0"}

]
install: ["sh" "-c" "ln -s %{PKG:lib}%/bin/uglifyjs %{bin}%/uglifyjs"]

remove: [
  [ "sh" "-c" "rm %{bin}%/uglifyjs" ] 
]

